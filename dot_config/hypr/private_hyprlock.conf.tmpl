    monitor =
    text = cmd[update:1000] hyprctl devices -j | jq -r '.keyboards[] | select(.main == true) | .active_keymap' | sed 's/English (US)/ðŸ‡ºðŸ‡¸ EN/; s/Thai/ðŸ‡¹ðŸ‡­ TH/'
